# PolyDoc AI Environment Configuration
# Copy this file to .env and update with your actual values

# =================
# FIREBASE CONFIG
# =================
VITE_FIREBASE_API_KEY=your_firebase_api_key_here
VITE_FIREBASE_AUTH_DOMAIN=your_project_id.firebaseapp.com
VITE_FIREBASE_PROJECT_ID=your_project_id
VITE_FIREBASE_STORAGE_BUCKET=your_project_id.appspot.com
VITE_FIREBASE_MESSAGING_SENDER_ID=your_messaging_sender_id
VITE_FIREBASE_APP_ID=your_firebase_app_id

# =================
# BACKEND DATABASE
# =================
# MongoDB (Recommended - Your Choice!)
MONGO_URL=mongodb+srv://polydoc_user:your_password@cluster0.xxxxx.mongodb.net/polydoc_ai?retryWrites=true&w=majority
DATABASE_TYPE=mongodb

# Alternative Options:
# SQLite (Simple for testing):
# DATABASE_URL=sqlite:///./polydoc.db
# DATABASE_TYPE=sqlite

# Option 3: MySQL (Alternative)
# DATABASE_URL=mysql://username:password@localhost:3306/polydoc_ai

# Option 4: PostgreSQL (Enterprise)
# DATABASE_URL=postgresql://username:password@localhost:5432/polydoc_ai

# =================
# AI/ML SERVICES
# =================
OPENAI_API_KEY=your_openai_api_key_here
EMBEDDING_MODEL=text-embedding-ada-002
COMPLETION_MODEL=gpt-3.5-turbo

# =================
# DOCUMENT PROCESSING
# =================
MAX_FILE_SIZE=10485760  # 10MB in bytes
SUPPORTED_EXTENSIONS=.pdf,.docx,.txt,.md,.png,.jpg,.jpeg
MAX_CHUNK_SIZE=1000
CHUNK_OVERLAP=200

# =================
# VECTOR SEARCH
# =================
VECTOR_DIMENSION=1536
SIMILARITY_THRESHOLD=0.7
MAX_SEARCH_RESULTS=10

# =================
# API CONFIGURATION
# =================
HOST=0.0.0.0
PORT=8000
DEBUG=True
API_PREFIX=/api/v1
CORS_ORIGINS=http://localhost:3003,http://127.0.0.1:3003

# =================
# SECURITY
# =================
SECRET_KEY=your_secret_key_here_change_in_production
ACCESS_TOKEN_EXPIRE_MINUTES=30

# =================
# LOGGING
# =================
LOG_LEVEL=INFO
LOG_FILE=./logs/polydoc.log

# =================
# REDIS (Optional - for caching)
# =================
REDIS_URL=redis://localhost:6379/0
CACHE_TTL=3600  # 1 hour in seconds
